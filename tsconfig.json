{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"lib": ["ESNext"],
		"allowJs": false,
		"skipLibCheck": true,
		"esModuleInterop": false,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"removeComments": true,
		"sourceMap": true,
		"noImplicitAny": true
	},
	"references": [
		{
			"path": "./packages/react/"
		},
		{
			"path": "./packages/utils/"
		},
		{
			"path": "./packages/vite-plugin/"
		}
	],
	"exclude": ["example"],
	"files": []
}
